{
  "compilerOptions": {
    "target": "es2016",
    "declaration": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/tests/*"]
}
