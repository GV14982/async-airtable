{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["error"]
      }
    ]
  },
  "plugins": ["jest", "@typescript-eslint/eslint-plugin"],
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": [
    "/lib",
    "src/tests",
    "jest.config.js",
    "/docs",
    "/coverage",
    "/dist",
    "webpack.*.js"
  ]
}
