{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "impliedStrict": true
    },
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "commonjs": true,
    "jest/globals": true
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["error"]
      }
    ]
  },
  "plugins": ["jest"],
  "extends": ["eslint:recommended", "prettier"],
  "ignorePatterns": ["/lib"]
}
